{% extends 'base.html.twig' %}

{% block title %}Créer un Article - Mon Blog{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/article-form.css') }}">
    <link rel="stylesheet" href="{{ asset('css/forms.css') }}">
    <link rel="stylesheet" href="{{ asset('css/common.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <h1>Créer un Article</h1>

    <form method="post">
        <div class="form-group">
            <label for="article_form_titre">Titre</label>
            {{ form_widget(form.titre, {'attr': {'id': 'article_form_titre'}}) }}
            {% if form.titre.vars.errors|length > 0 %}
                <div class="form-error">{{ form_errors(form.titre) }}</div>
            {% endif %}
        </div>

        <div class="form-group">
            <label for="article_form_contenu">Contenu</label>
            {{ form_widget(form.contenu, {'attr': {'id': 'article_form_contenu', 'rows': 15}}) }}
            {% if form.contenu.vars.errors|length > 0 %}
                <div class="form-error">{{ form_errors(form.contenu) }}</div>
            {% endif %}
        </div>

        <div class="form-actions">
            <button type="submit" class="btn">Créer l'Article</button>
            <a href="{{ path('app_article_index') }}" class="btn btn-outline">Annuler</a>
        </div>
        
        {{ form_end(form) }}
    </form>
</div>

{% endblock %}