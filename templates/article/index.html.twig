{% extends 'base.html.twig' %}

{% block title %}Articles - Mon Blog{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/common.css') }}">
    <link rel="stylesheet" href="{{ asset('css/article-list.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="articles-header">
        <h1>Tous les Articles</h1>
        {% if app.user %}
            <a href="{{ path('app_article_create') }}" class="btn">Créer un Article</a>
        {% endif %}
    </div>

    {% if articles|length > 0 %}
        <div class="articles-grid">
            {% for article in articles %}
                <div class="article-card">
                    <h3>{{ article.titre }}</h3>
                    <div class="meta">{{ article.createdAt|date('Y-m-d') }}</div>
                    <p>{{ article.contenu|slice(0, 150) }}{% if article.contenu|length > 150 %}...{% endif %}</p>
                    <div class="author">Par {{ article.author.prenom }} {{ article.author.nom }}</div>

                    <div class="article-actions">
                        <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn-small">Lire</a>
                        {% if app.user and app.user.id == article.author.id %}
                            <a href="{{ path('app_article_edit', {'id': article.id}) }}" class="btn-small">Modifier</a>
                            <a href="{{ path('app_article_delete', {'id': article.id}) }}" class="btn-small btn-delete" onclick="return confirm('Supprimer cet article ?')">Supprimer</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="empty-state">
            <p>Aucun article pour le moment.</p>
            {% if app.user %}
                <a href="{{ path('app_article_create') }}" class="btn">Créer votre premier article</a>
            {% else %}
                <p><a href="{{ path('app_register') }}">Inscrivez-vous</a> pour créer un article</p>
            {% endif %}
        </div>
    {% endif %}
</div>

{% endblock %}